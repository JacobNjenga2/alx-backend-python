pipeline {
    agent any
    
    stages {
        stage('Install System Dependencies') {
            steps {
                script {
                    // Install MySQL client development libraries and build tools
                    sh '''
                        apt-get update
                        apt-get install -y \
                            pkg-config \
                            default-libmysqlclient-dev \
                            libmysqlclient-dev \
                            build-essential \
                            python3-dev
                    '''
                }
            }
        }
        
        stage('Install Python Dependencies') {
            steps {
                dir('messaging_app') {
                    sh 'pip3 install -r requirements.txt --break-system-packages'
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                dir('messaging_app') {
                    sh 'python3 -m pytest --junitxml=test-results.xml'
                }
            }
            post {
                always {
                    junit 'messaging_app/test-results.xml'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline completed'
        }
    }
}